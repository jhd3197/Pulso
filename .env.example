# Pulso Configuration

# Cache Settings
# Cache directory (optional, overrides platform defaults)
# PULSO_CACHE_DIR=/path/to/custom/cache

# Session ID for isolated caching (optional)
# PULSO_SESSION_ID=default

# Cache in Redis (optional, for Docker/distributed deployments)
# PULSO_CACHE_BACKEND=filesystem  # Options: filesystem, redis
# PULSO_REDIS_URL=redis://localhost:6379/0

# Logging
PULSO_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Default Domain Policies (optional)
# PULSO_DEFAULT_TTL=1d
# PULSO_DEFAULT_DRIVER=requests
# PULSO_DEFAULT_MAX_RETRIES=3
# PULSO_DEFAULT_RETRY_DELAY=1.0
# PULSO_DEFAULT_FALLBACK=return_cached

# Playwright Settings (optional)
# PULSO_PLAYWRIGHT_HEADLESS=true
# PULSO_PLAYWRIGHT_TIMEOUT=30000
